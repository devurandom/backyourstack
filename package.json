{
  "name": "backyourstack",
  "version": "1.1.0",
  "description": "BackYourStack analyzes repositories to recommend Open Source projects to support.",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencollective/backyourstack.git"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "build": "npm run build:server && npm run build:next",
    "build:server": "babel --copy-files ./src --out-dir ./build",
    "build:next": "next build build",
    "start": "NODE_ENV=production node build/server/index.js",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "test": "jest",
    "update-projects": "babel-node src/scripts/update-projects",
    "update-collectives": "babel-node src/scripts/update-collectives",
    "detect-packages": "./src/scripts/detect-all-packages.sh"
  },
  "author": {
    "name": "Open Collective, Inc.",
    "email": "team@opencollective.com"
  },
  "contributors": [
    "Fran√ßois Hodierne <francois@opencollective.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^15.10.0",
    "@zeit/next-css": "^0.2.1-canary.2",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.3",
    "cross-fetch": "^2.2.2",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fs-extra": "^7.0.0",
    "graphql-request": "^1.8.2",
    "lodash": "^4.17.10",
    "lru-cache": "^4.1.3",
    "md5": "^2.2.1",
    "moment": "^2.22.2",
    "multer": "^1.3.1",
    "next": "^7.0.0-canary.7",
    "next-routes": "^1.4.2",
    "nprogress": "^0.2.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-dropzone": "^5.0.1",
    "serve-favicon": "^2.5.0",
    "toml": "^2.3.3",
    "winston": "^3.0.0",
    "xmldoc": "^1.1.2"
  },
  "engines": {
    "node": "10.x.x"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0",
    "@babel/node": "7.0.0",
    "@mdx-js/loader": "^0.15.0",
    "@mdx-js/mdx": "^0.15.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^5.4.0",
    "eslint-config-opencollective": "^1.5.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "svg-react-loader": "^0.4.5",
    "webpack": "4.16.3",
    "webpack-bundle-analyzer": "^2.13.1"
  },
  "nodemonConfig": {
    "watch": [
      "src/lib",
      "src/server",
      "src/routes.js"
    ]
  },
  "now": {
    "type": "npm",
    "alias": [
      "backyourstack",
      "backyourstack.com",
      "www.backyourstack.com"
    ],
    "env": {
      "GITHUB_CLIENT_ID": "@github_client_id",
      "GITHUB_CLIENT_SECRET": "@github_client_secret",
      "GITHUB_GUEST_TOKEN": "@github_guest_token",
      "GITHUB_TOKEN_DONATORS": "@github_token_donators",
      "MAILCHIMP_API_KEY": "@mailchimp_api_key",
      "MAILCHIMP_API_URL": "@mailchimp_api_url"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 1
      },
      "bru1": {
        "min": 1,
        "max": 1
      }
    }
  },
  "greenkeeper": {
    "ignore": [
      "@babel/cli",
      "@babel/node",
      "webpack"
    ]
  }
}
